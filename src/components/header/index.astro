---
import { NAV_LINKS } from '@/constants/index';
import Brand from '../brand/index.astro';
import Drawer from '../drawer/index.astro';
import Navbar from './navbar/index.astro';
import MenuHamburguer from './menu-hamburguer/index.astro';

type Props = {
  activeRoute: string;
};

const { activeRoute } = Astro.props;
---

<header class='flex items-center justify-between max-w-6xl mx-auto px-6'>
  <a href={NAV_LINKS[0].route}>
    <Brand />
  </a>
  <div class='md:hidden'>
    <MenuHamburguer />
  </div>
  <Drawer id='nav-drawer'>
    <Navbar activeRoute={activeRoute} />
  </Drawer>

  <div class='hidden md:block'>
    <Navbar activeRoute={activeRoute} />
  </div>
</header>
