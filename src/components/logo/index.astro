---
import { Image } from 'astro:assets';
import { twMerge } from 'tailwind-merge';

import Logo from '../../assets/images/pulo-do-gato-news-logo.jpg';

type Props = {
  className?: string;
  size?: number;
};

const { className = '', size = 400 } = Astro.props;
---

<Image
  src={Logo}
  width={size}
  height={size}
  alt='Pulo do Gato News'
  loading='eager'
  class={twMerge('rounded-md shadow-sm object-cover', className)}
/>
