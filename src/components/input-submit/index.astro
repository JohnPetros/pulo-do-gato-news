---
import Button from '@/components/button/index.astro';

type Props = {
  placeholder: string;
  title: string;
  name: string;
  value: string;
};

const { placeholder, title, name, value } = Astro.props;
---

<div
  class='flex items-center px-3 py-2 rounded-md bg-gray-50 border border-gray-100 focus-within:border-primary'
>
  <input
    type='text'
    name={name}
    value={value}
    placeholder={placeholder}
    class='w-full h-full bg-transparent border-none focus:ring-1 focus:ring-gray-50'
  />
  <Button>
    {title}
    <svg
      xmlns='http://www.w3.org/2000/svg'
      width='24'
      height='24'
      viewBox='0 0 24 24'
      fill='none'
      stroke='currentColor'
      stroke-width='2'
      stroke-linecap='round'
      stroke-linejoin='round'
      class='icon icon-tabler icons-tabler-outline icon-tabler-search size-5'
      ><path stroke='none' d='M0 0h24v24H0z' fill='none'></path><path
        d='M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0'></path><path
        d='M21 21l-6 -6'></path></svg
    >
  </Button>
</div>
